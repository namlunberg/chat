{% extends 'base.html.twig' %}

{% block title %}Сообщение{% endblock %}

{% block body %}
<h1>Сообщение</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ message.id }}</td>
        </tr>
        <tr>
            <th>Содержимое</th>
            <td>{{ message.content }}</td>
        </tr>
        <tr>
            <th>Дата создания</th>
            <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
    </tbody>
</table>

<div class="d-inline-flex flex-column mb-3 row-gap-2">
    <a href="{{ path('app_message_index') }}" class="btn btn-primary">Вернуться к списку</a>

    <a href="{{ path('app_message_edit', {'id': message.id}) }}" class="btn btn-warning">Изменить</a>
</div>

{{ include('message/_delete_form.html.twig') }}
{% endblock %}