{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <h1>Создание пользователя</h1>

    {{ form_errors(userCreateForm) }}

    {{ form_start(userCreateForm) }}
    {{ form_row(userCreateForm.email) }}
    {{ form_row(userCreateForm.roles, {
        label: 'Роли пользователя'
    }) }}
    {{ form_row(userCreateForm.plainPassword, {
        label: 'Пароль'
    }) }}
    {{ form_row(userCreateForm.agreeTerms) }}

    <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(userCreateForm) }}
</div>
{% endblock %}